<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llButton_fragment_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="12dp">

        <Button
            android:id="@+id/btnCancel_fragment_filter"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/shape_gray_frame_background"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/cancel"
            android:textColor="@color/text2"
            android:textSize="@dimen/text_size_large"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnConfirm_fragment_filter"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/confirm"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large"/>

    </LinearLayout>

    <TextView
        android:id="@+id/line2_fragment_filter"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/llButton_fragment_filter"
        android:background="@color/divider"/>

    <RadioGroup
        android:id="@+id/rg_fragment_filter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/line2_fragment_filter"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbLocation_fragment_filter"
            style="@style/CustomRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/location"/>

        <RadioButton
            android:id="@+id/rbSystem_fragment_filter"
            style="@style/CustomRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/system"/>

    </RadioGroup>

    <View
        android:id="@+id/line1_fragment_filter"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_above="@id/line2_fragment_filter"
        android:layout_toRightOf="@id/rg_fragment_filter"
        android:background="@color/divider"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpLocation_fragment_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line2_fragment_filter"
        android:layout_toRightOf="@id/line1_fragment_filter"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpSystem_fragment_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line2_fragment_filter"
        android:layout_toRightOf="@id/line1_fragment_filter"
        android:visibility="gone"/>

</RelativeLayout>
